@model HBooks.Domain.Entities.Book.BookObject

@{
    ViewBag.Title = "Edit";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="text-center">
            <h1 class="display-4">Edição de Livros</h1>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">

                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" autocomplete="off" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <label asp-for="ShortDescription" class="control-label"></label>
                    <input asp-for="ShortDescription" class="form-control" autocomplete="off" required />
                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <label asp-for="Genre" class="control-label"></label>
                    <input asp-for="Genre" class="form-control" autocomplete="off" required />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Qty" class="control-label"></label>
                    <input asp-for="Qty" class="form-control" autocomplete="off" type="number" max="10000" required />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <label asp-for="QtyRented" class="control-label"></label>
                    <input asp-for="QtyRented" class="form-control" autocomplete="off" type="number" max="10000" required />
                    <span asp-validation-for="QtyRented" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" value="Salvar Alterações" class="btn btn-info btn-block" /><br /><br />
            <div class="text-center">
                @Html.ActionLink("Voltar", "Index")
            </div>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {

        <div class="modal" tabindex="-1" role="dialog" id="errorModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Ops, ocorreu um erro:</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>@ViewBag.Error.ToString()</p>
                    </div>
                </div>
            </div>
        </div>

        <script>
        $('#errorModal').modal(backdrop: false);
        </script>
    }
}
